generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Optional: relation to uploaded files
  files File[]
}

model File {
  id           String   @id @default(cuid())
  originalName String
  uniqueName   String   @unique // S3 key
  url          String   // S3 key or full URL (optional if you can always construct from key)
  mimetype     String
  size         Int      // in bytes
  uploadedAt   DateTime @default(now())
  expiresAt    DateTime // <-- Add this: when the file should be deleted
  status       FileStatus @default(ACTIVE) // <-- Add this: for tracking (see enum below)
  userId       String?  // optional: if tied to a user
  user         User?    @relation(fields: [userId], references: [id])
}

enum FileStatus {
  ACTIVE
  EXPIRED
  DELETED
}